<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChatGPTSimple" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#01a8dd</item>
        <item name="colorPrimaryVariant">#01a8dd</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="colorBackGround_Second">@color/grey_900</item>
        <item name="background_icon">@color/white</item>
        <item name="colorDivider">#4B4949</item>

        <item name="chatIncoming">#404c53</item>
        <item name="chatOnIncoming">#e9edf0</item>
        <item name="chatOutcome">#00485d</item>
        <item name="chatOnOutcome">#e9edf0</item>
    </style>

    <style name="appearance.round.50" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="appearance.round.10" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>

    <style name="animation.popup_window" parent="">
        <item name="android:windowEnterAnimation">@anim/popup_in</item>
        <item name="android:windowExitAnimation">@anim/popup_out</item>
    </style>

    <style name="card.round" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
    </style>

    <!--  text-->

    <style name="txt.family" parent="">
        <item name="android:fontFamily">@font/font_family</item>
        <item name="fontFamily">@font/font_family</item>
    </style>

    <!-- normal -->

    <style name="txt.h00" parent="txt.family">
        <item name="android:textSize">11sp</item>
        <item name="fontWeight">200</item>
        <item name="android:textFontWeight" tools:targetApi="p">200</item>
    </style>

    <style name="txt.h0" parent="txt.family">
        <item name="android:textSize">12sp</item>
        <item name="fontWeight">200</item>
        <item name="android:textFontWeight" tools:targetApi="p">200</item>
    </style>

    <style name="txt.h1" parent="txt.family">
        <item name="android:textSize">14sp</item>
        <item name="fontWeight">200</item>
        <item name="android:textFontWeight" tools:targetApi="p">200</item>
    </style>

    <style name="txt.h2" parent="txt.family">
        <item name="android:textSize">16sp</item>
        <item name="fontWeight">200</item>
        <item name="android:textFontWeight" tools:targetApi="p">200</item>
    </style>

    <style name="txt.h3" parent="txt.family">
        <item name="android:textSize">18sp</item>
        <item name="fontWeight">200</item>
        <item name="android:textFontWeight" tools:targetApi="p">200</item>
    </style>

    <style name="txt.h4" parent="txt.family">
        <item name="android:textSize">22sp</item>
        <item name="fontWeight">200</item>
        <item name="android:textFontWeight" tools:targetApi="p">200</item>
    </style>

    <!-- light -->

    <style name="txt.h00.light" parent="txt.h00">
        <item name="android:textFontWeight" tools:targetApi="p">100</item>
    </style>

    <style name="txt.h0.light" parent="txt.h0">
        <item name="android:textFontWeight" tools:targetApi="p">100</item>
    </style>

    <style name="txt.h1.light" parent="txt.h1">
        <item name="android:textFontWeight" tools:targetApi="p">100</item>
    </style>

    <style name="txt.h5" parent="txt.family">
        <item name="android:textSize">24sp</item>
        <item name="fontWeight">200</item>
    </style>

    <!-- medium / bold-->

    <style name="txt.h00.medium" parent="txt.h00">
        <item name="fontWeight">400</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
    </style>

    <style name="txt.h0.medium" parent="txt.h0">
        <item name="fontWeight">400</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
    </style>

    <style name="txt.h1.medium" parent="txt.h1">
        <item name="fontWeight">400</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
    </style>

    <style name="txt.h00.bold" parent="txt.h00">
        <item name="fontWeight">700</item>
        <item name="android:textFontWeight" tools:targetApi="p">700</item>
    </style>

    <style name="txt.h0.bold" parent="txt.h0">
        <item name="fontWeight">700</item>
        <item name="android:textFontWeight" tools:targetApi="p">700</item>
    </style>

    <style name="txt.h1.bold" parent="txt.h1">
        <item name="fontWeight">700</item>
        <item name="android:textFontWeight" tools:targetApi="p">700</item>
    </style>

    <style name="txt.h2.medium" parent="txt.h2">
        <item name="fontWeight">400</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
    </style>

    <style name="txt.h2.bold" parent="txt.h2">
        <item name="fontWeight">700</item>
        <item name="android:textFontWeight" tools:targetApi="p">700</item>
    </style>

    <style name="txt.h3.medium" parent="txt.h3">
        <item name="fontWeight">400</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
    </style>

    <style name="txt.h3.bold" parent="txt.h3">
        <item name="fontWeight">700</item>
        <item name="android:textFontWeight" tools:targetApi="p">700</item>
    </style>

    <style name="txt.h4.medium" parent="txt.h4">
        <item name="fontWeight">400</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
    </style>

    <style name="txt.h4.bold" parent="txt.h4">
        <item name="fontWeight">700</item>
        <item name="android:textFontWeight" tools:targetApi="p">700</item>
    </style>

    <style name="txt.h5.medium" parent="txt.h5">
        <item name="fontWeight">400</item>
    </style>

    <style name="txt.h5.bold" parent="txt.h5">
        <item name="fontWeight">700</item>
    </style>

    <style name="txt.title" parent="txt.h3">
        <item name="android:textColor">?colorOnPrimary</item>
    </style>

    <style name="txt.desc" parent="txt.h2">
        <item name="android:textColor">?colorOnPrimary</item>
    </style>

    <style name="ClickableBorderlessStyle">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="card.messenger.incoming.message" parent="card.messenger.incoming">
        <item name="contentPaddingLeft">16dp</item>
        <item name="contentPaddingRight">16dp</item>
        <item name="contentPaddingTop">8dp</item>
        <item name="contentPaddingBottom">8dp</item>
    </style>

    <style name="card.messenger.incoming" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/appearance.messenger.in</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">?attr/chatIncoming</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:minWidth">100dp</item>
    </style>

    <style name="appearance.messenger.in" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">5dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">5dp</item>
        <item name="cornerSizeBottomLeft">5dp</item>
    </style>

    <style name="card.messenger.outcome.message" parent="card.messenger.outcome">
        <item name="contentPaddingLeft">16dp</item>
        <item name="contentPaddingRight">16dp</item>
        <item name="contentPaddingTop">8dp</item>
        <item name="contentPaddingBottom">8dp</item>
    </style>

    <style name="card.messenger.outcome" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/appearance.messenger.out</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">?attr/chatOutcome</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:minWidth">100dp</item>
    </style>

    <style name="appearance.messenger.out" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">5dp</item>
        <item name="cornerSizeTopLeft">5dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">5dp</item>
    </style>

</resources>